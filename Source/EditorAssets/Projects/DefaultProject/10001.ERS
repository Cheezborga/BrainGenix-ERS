#version 400

// Return Grid Modified Pixels
layout (location = 0) out vec4 FragColor;


// Get Input Params From Vertex Shader
smooth in vec3 UV;
smooth in vec3 OriginalPosition;

// Get Configuration Params
uniform vec3 GRID_COLOR_Base;
uniform vec3 GRID_COLOR_X;
uniform vec3 GRID_COLOR_Z;
uniform float GridSize;


void main(void)
{
    if(fract(UV.x / GridSize) < 0.01f || fract(UV.y / GridSize) < 0.01f) {
    
        float Alpha = 1.0f;
        FragColor = vec4(1.0f, Alpha);
    
    }
}


