#version 400

layout (location = 0) out vec4 FragColor;

smooth in vec3 ex_UV;
smooth in vec3 ex_originalPosition;

// Get Configuration Params
uniform vec3 GRID_COLOR_Base;
uniform vec3 GRID_COLOR_X;
uniform vec3 GRID_COLOR_Z;
uniform float GridSize;

void main(void)
{
    if(fract(ex_UV.x / GridSize) < 0.01f || fract(ex_UV.y / GridSize) < 0.01f) {

        FragColor = vec4(GRID_COLOR_Base);
    
    }
}