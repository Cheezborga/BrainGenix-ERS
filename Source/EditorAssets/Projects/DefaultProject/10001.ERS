#version 400

layout (location = 0) out vec4 FragColor;

smooth in vec3 ex_UV;
smooth in vec3 ex_originalPosition;

uniform vec4 lineColor;

float GridSize = 0.1f;


void main(void)
{
    if(fract(ex_UV.x / GridSize) < 0.01f || fract(ex_UV.y / GridSize) < 0.01f)
        FragColor = vec4(1.0f);
    else
        FragColor = vec4(0);
}
