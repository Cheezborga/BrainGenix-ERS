#version 400

layout (location = 3) in vec4 aPos;
layout (location = 4) in vec3 aTexCoords;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

// Get Configuration Params
uniform vec3 GRID_COLOR_Base;
uniform vec3 GRID_COLOR_X;
uniform vec3 GRID_COLOR_Z;
uniform float GridSize;


smooth out vec3 UV;
smooth out vec3 OriginalPosition;





void main()
{
    gl_Position = projection * view * model * aPos;

    UV = aTexCoords;
    OriginalPosition = vec3(aPos.xyz);
}


