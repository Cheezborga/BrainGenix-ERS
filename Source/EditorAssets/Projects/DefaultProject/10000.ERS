#version 400

layout (location = 0) in vec4 aPos;
layout (location = 2) in vec3 aTexCoords;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

smooth out vec3 UV;
//smooth out vec3 ex_originalPosition;

void main()
{
    gl_Position = projection * view * model * aPos;

    UV = aTexCoords;
    //ex_originalPosition = vec3(aPos.xyz);
}


